{
  "name": "steelseries-tools",
  "author": "Riccardo Rebottini",
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/steelseries-tools.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "react": ">=16"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "start": "dts watch",
    "build": "dts build",
    "test": "dts test",
    "lint": "dts lint",
    "prepare": "dts build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "dts lint"
    }
  },
  "prettier": {
    "printWidth": 180,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "endOfLine": "auto",
    "bracketSpacing": true
  },
  "size-limit": [
    {
      "path": "dist/steelseries-tools.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/steelseries-tools.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@tsconfig/create-react-app": "^1.0.2",
    "@tsconfig/recommended": "^1.0.1",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "dts-cli": "^1.5.1",
    "husky": "^8.0.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rollup-plugin-svg-import": "^1.6.0",
    "size-limit": "^7.0.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.2"
  }
}
